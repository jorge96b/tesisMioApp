<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gf_daniel.mioapp.tRecargarTargetaActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Tutorial Tarejeta"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:text="No se maneja dinero en efectivo para ingresar a un bus o estación. Máxima seguridad en tus transacciones ya que cuenta con mecanismos anti clonación de última generación. Puede realizar recargas de varios pasajes en cualquiera de los puntos autorizados y así evita hacer colas frecuentemente. Puede realizar trasbordos entre buses y estaciones para llegar a su destino. En caso de pérdida o daño, usted puede bloquear su tarjeta y transferir es saldo a una nueva, llamando a la Línea de Atención al Cliente 620-4040. Puede solicitar un extracto de la tarjeta para tener control de los gastos. Pasaje Crédito."
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/tarjeta"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
